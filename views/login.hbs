<div class="login">
<div class="wrapper">
    <div class="title">Login</div>
    <form action="/login" method="post" enctype="multipart/form-data">
        <div class="field">
            <input type="text" name = "clb_username" required>
            <label for="">Username</label>
        </div>
        <div class="field">
            <input type="password" name = "clb_password" required>
            <label for="">Password</label>
        </div>
        {{#if err}}
            <div class="error-register">
                {{err}}
            </div>
        {{/if}}
        <div class="pass-link">
            <a href="/change_password">Forgot Password?</a>
        </div>
        <div class="field">
            <input type="submit" value="Login">
        </div>
        <div class="signup-link">
            Not a member ? 
            <a href="/register">Sign Up Now</a>
        </div>
    </form>
</div>
</div>