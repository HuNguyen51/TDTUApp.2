
<style>
    body {
        width: 100% !important;
        background-color: #dbdada !important;
    }
</style>
<div class="container-fluid">
    {{> Header/headerAdmin}}
    <div class="row container__admin">
        {{> Sidebar/sidebarAdmin}}
        <div class="col-lg-9 mb-5 pt-3  scroll-content">

           <div class="accounts">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Tên</th>
                        <th>Loại tài khoản</th>
                        <th>CLB/Khoa</th>
                        <th>Email</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each users}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{role}}</td>
                            <td>{{faculty}}</td>
                            <td>{{email}}</td>
                            <td class="btn details-button" data-toggle="modal" data-target="#view-user" onclick="showDetails(`{{id}}`,`{{name}}`, `{{avatar}}`, `{{bio}}`, `{{isBan}}`)"> Chi tiết</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="view-user">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><span id="detail-name">Tên</span></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/admin/ban_user" method="post" enctype="multipart/form-data">
        <div class="modal-body">
            <div class="form-group">
                <img id="detail-avatar" src="" alt="" class="form-control edit__profile-img">
            </div>
            <div class="form-group">
                <p id="detail-bio">Tiểu sử của tôi</p>
                <p>Quyền truy cập ứng dụng: <span id="detail-ban">được phép/bị chặn</span> </p>
            </div>
        <div class="modal-footer">
            <input id = "ban_user_id" name="user_id" type="hidden">
            <input id = "ban_action" name="is_ban" type="hidden">
            <button type="submit" class="btn btn-danger" id="confirm-ban-unban">Chặn</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </form>
      
    </div>
  </div>
</div>